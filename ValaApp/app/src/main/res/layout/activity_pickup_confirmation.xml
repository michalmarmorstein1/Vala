<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.valapay.vala.activities.PickupConfirmationActivity">

    <ProgressBar
        android:id="@+id/pickup_progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/showthisicolarge"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageViewHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pickup_confirmation_header"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/green"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textViewHeader" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qrCode"
        android:layout_weight="1"
        android:padding="0dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green"
        android:layout_marginBottom="30dp"
        android:id="@+id/textViewCode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BigBlueButton"
        android:text="@string/pickup_confirmation_ok_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:id="@+id/buttonOk" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BigGreenButton"
        android:text="@string/pickup_confirmation_problem_btn"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonProblem" />
</LinearLayout>
